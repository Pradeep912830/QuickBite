<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Signup_Activity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Waves"
        android:textColor="#BE1515"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Deliver"
        android:textColor="@color/mainDark"
        android:layout_gravity="center"
        android:textSize="13sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up here"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/mainLight"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signupName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/white_color"
            android:drawableLeft="@drawable/user_account"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:hint="Name"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signupWithEmailOrPhone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/white_color"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:hint="Email or phone number"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signupPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Passwod"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:background="@drawable/white_color"
            android:paddingLeft="12dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up with"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupWithGoogle"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Google"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/google"
            android:background="@drawable/white_color"
            android:paddingLeft="10dp"
            android:textSize="8sp"
            android:paddingEnd="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupWithFacebook"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="facebook"
            android:textAllCaps="false"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/facebook"
            android:background="@drawable/white_color"
            android:paddingLeft="10dp"
            android:textSize="8sp"
            android:textStyle="bold"
            android:paddingEnd="10dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:background="@drawable/red_color"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/alreadyHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@color/mainDark"
        android:layout_gravity="center"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>



</LinearLayout>