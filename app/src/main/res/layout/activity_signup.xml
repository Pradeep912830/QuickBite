<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose_Location_Activity">

    <!-- Original LinearLayout -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".Signup_Activity">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/Waves"
            android:textColor="#BE1515"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Signup Here"
            android:textColor="@color/mainLight"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/signupName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/white_color"
                android:drawableLeft="@drawable/user_account"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:hint="Name"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobileNumber"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_color"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signupWithEmailOrPhone"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_color"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:hint="Email "
                android:inputType="textEmailAddress"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signupPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_color"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:hint="Passwod"
                android:inputType="textPassword"
                android:paddingLeft="12dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="or"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Sign up with"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupWithGoogle"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/white_color"
                android:drawableLeft="@drawable/google"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="Google"
                android:textAllCaps="false"
                android:textSize="8sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupWithFacebook"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/white_color"
                android:drawableLeft="@drawable/facebook"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="facebook"
                android:textAllCaps="false"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/red_color"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alreadyHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Already have an account?"
            android:textColor="@color/mainDark"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Progress Overlay -->
    <View
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"/>

</FrameLayout>
